    <!-- versi 2 start -->
    <template id="report_patient">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="oe_structure">
                            <div class="row">
                                <div class="col-xs-2" style="margin:auto"></div>
                                <center>
                                    <div class="col-xs-8" style="margin:auto">
                                        <table class="table table-condensed" style="border: 3px solid black !important;">
                                            <tr>
                                                <td width="40%">
                                                    <p style="text-align:center; padding-top:20px">
                                                        <img t-if="not doc.image" t-att-src="'/web/static/src/img/placeholder.png'" height="50" border="1" />
                                                        <img t-if="doc.image" t-att-src="'data:image/png;base64,%s' % to_text(doc.image)" height="50" border="1" />
                                                    </p>
                                                    <p style="text-align:center;">
                                                       <h2><strong><span t-field="doc.patient_name" /></strong></h2>
                                                    </p>
                                                </td>
                                                <td width="60%">
                                                    <table>
                                                        <tr>
                                                            <td>
                                                                <p style="text-align:right;"><strong>Umur</strong></p>
                                                                <p style="text-align:right;"><strong>Grup Umur</strong></p>
                                                                <p style="text-align:right;"><strong>Jenis Kelamin</strong></p>
                                                                <p style="text-align:right;"><strong>Nomor Reg.</strong></p>
                                                            </td>
                                                            <td><p style="text-align:left; padding-left:10px;" t-field="doc.patient_age" />
                                                                <p style="text-align:left; padding-left:10px;" t-field="doc.age_group" />
                                                                <p style="text-align:left; padding-left:10px;" t-field="doc.gender" />
                                                                <p style="text-align:left; padding-left:10px;" t-field="doc.name_seq" />
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
     <!-- versi 2 end -->
</odoo>